@model DeleteModel
@{
    <table>
        <tr>
            <th>Produtc Id</th>
            <th>Product Image</th>
            <th>Company</th>
            <th>Model</th>
            <th>Price</th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            ProductModel product = Model.Products[i];
            <tr>
                <td>@product.ProductID</td>
                <td><img width="100" height="100" src="@product.ProductImage" /></td>
                <td>@product.CompanyName</td>
                <td>@product.Model</td>
                <td>@product.Price</td>
                <td><button type="button" id="btnDelete" onclick="Delete(@product.ProductID)">Delete product</button></td>
            </tr>
        }
    </table>
    <script>
        function Delete(productId) {
            $.post('/admin/delete', { productId: productId }).done(function (response) {
                location.reload();
            });
        }
    </script>
}
