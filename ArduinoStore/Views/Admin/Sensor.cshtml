@model AddSensorModel
@{
    <p>
        Add motor
    </p>
    <form asp-controller="Admin" asp-action="Sensor" method="post">
        Price:  <input min="1" type="number" asp-for="Price" /> <br />
        <span asp-validation-for="Price" class="text-danger"></span><br />
        Model: <input asp-for="Model" /><br />
        <span asp-validation-for="Model" class="text-danger"></span><br />
        Company: @Html.DropDownListFor(m => m.CompanyID,
new SelectList(Model.Companies, "CompanyID", "Name"))<br />
        Product Image: <input asp-for="ProductImage" /><br />
        <span asp-validation-for="ProductImage" class="text-danger"></span><br />
        Type: <input asp-for="Type" /><br />
        <span asp-validation-for="Type" class="text-danger"></span><br />
        Voltage:  <input min="1" type="number" step="0.01" asp-for="Voltage" /> <br />
        <span asp-validation-for="Voltage" class="text-danger"></span><br />
        Digital Pin:  <input type="checkbox" asp-for="DigitalPin" /> <br />
        <span asp-validation-for="DigitalPin" class="text-danger"></span><br />
        Analog Pin:  <input type="checkbox" asp-for="AnalogPin" /> <br />
        <span asp-validation-for="DigitalPin" class="text-danger"></span><br />
        <button type="submit">Add</button>
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}